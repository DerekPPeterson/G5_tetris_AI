#ifndef TETROMINOES_H
#define TETROMINOES_H

#define N_ROWS 20
#define N_COLS 10
#define N_TETRONIMOES

struct point {
	int x;
	int y;
}typedef point_t;

struct piece {
	int piece_id;
	point_t position;
	int rotation;
} typedef piece_t;

typedef int board_t[N_ROWS];

piece_t create_piece(int piece_id);
int drop_piece(piece_t piece, board_t board);

#endif
