#ifndef TETROMINOES_H
#define TETROMINOES_H

struct point {
	int x;
	int y;
}typedef point_t;

struct piece {
	int piece_id;
	point_t position;
	int rotation;
} typedef piece_t;

piece_t create_piece(piece_id) {
	piece_t piece;

	// Initial position is centre top
	piece.postion.x = 3;
	piece.postion.y = 0;

	piece.rotation = 0


}

#endif
