#include <xparameters.h>

volatile unsigned int * but5 = (unsigned int*) XPAR_AXI_5BUT_BASEADDR;

int state = 0;

void read_buttons()
{
	state = *but5;
}

int centre()
{
	return state & 0x1;
}

int left()
{
	return state & 0x4;
}
